@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    div.container {
        background-color: aquamarine
    }

    main.pb-3 {
        margin: auto;
        background-color: aqua
    }

    .list-product {
        width: 1200px;
        margin: auto;
        display: flex;
        flex-wrap: wrap;
    }

    div.product {
        margin-top: 30px;
        margin-right: 30px;
        width: 240px;
        height: 300px;
    }

    ul.navbar-nav.flex-grow-1 {
        background-color: bisque
    }

    a.navbar-brand {
        background-color: bisque
    }

    .product {
        margin-top: 10px;
        margin-right: 10px;
        width: 120px;
        height: 200px;
    }

    img {
        width: 200px;
        height: 200px;
        display: block;
        margin: auto;
    }

    .title {
        display: block;
        font-size: 15px;
        font-weight: bold;
        text-align: center;
    }

    .viewProduct, .addProduct {
        width: calc((100% - 2px) / 2);
        display: inline-block;
        float: left;
        padding: 2px;
        font-size: 12px;
        box-sizing: border-box;
        color: #fff;
        background: #808080;
        text-decoration: none;
        text-align: center;
    }

    .addProduct {
        margin-left: 2px;
    }
</style>

<div class="list-product">
    @foreach (var item in Model)
    {
        <div class="product">
            <img src="@item.ImageUrl" class="img-responsive" />
            <span class="title">@item.NameBook</span>
            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="viewProduct">View</a>
            <a asp-controller="Home" asp-action="addCart" asp-route-id="@item.Id" class="addProduct">Add order</a>
        </div>
    }


</div>
    